# Constellation mapping file

@prefix con:  <http://www.constellation-app.com/ns#> .
	
:Person
    a               rdfs:Class ;
	rdfs:comment    "This represents a Person." ;
	rdfs:subClassOf :NodeTypePerson .

:locatedNear
    a               rdf:Property ;
    rdfs:subClassOf :NodeCustomAttribute ;    
    rdfs:label      "Located Near" .

:Country
    a               rdfs:Class ;    
    rdfs:comment    "This represents a Country." ;
    rdfs:subClassOf :NodeTypeCountry .
:City
    a               rdfs:Class ;    
    rdfs:comment    "This represents a city." ;
    rdfs:subClassOf :NodeTypeLocation .

# Some graph instances data

:sydney
    a            :City ;
    rdfs:label   "Sydney" ;
    rdfs:comment "Australia's largest city." .

:canberra
    a            :City ;
    rdfs:label   "Canberra" ;
    rdfs:comment "Australia's national capital." .
	
:australia
    a            :Country ;
    rdfs:label   "Australia" ;
    rdfs:comment "The country Australia." .

:person1
    a            :Person ;
    rdfs:label   "Person 1" ;
    rdfs:comment "First vertex." ; 
    :locatedNear :sydney .

:person2
    a            :Person ;
    rdfs:label   "Person 2" ;
    rdfs:comment "Second vertex." ;
    :locatedNear :canberra .

# Types

:NodeTypePerson
    rdf:type         rdfs:Class ;   
    rdfs:label       "NodeTypePerson" ;
    rdfs:comment     "" ;   
    vs:term_status   "stable" ;
    rdfs:isDefinedBy <http://www.constellation-app.com/ns> .

:NodeTypeCity
    rdf:type         rdfs:Class ;   
    rdfs:label       "NodeTypeCity" ;
    rdfs:comment     "" ;   
    vs:term_status   "stable" ;
    rdfs:isDefinedBy <http://www.constellation-app.com/ns> .
	
:NodeTypeCountry
    rdf:type         rdfs:Class ;   
    rdfs:label       "NodeTypeCountry" ;
    rdfs:comment     "" ;   
    vs:term_status   "stable" ;
    rdfs:isDefinedBy <http://www.constellation-app.com/ns> .